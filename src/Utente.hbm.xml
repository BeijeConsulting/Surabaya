<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping>
   <class name = "it.beije.surabaya.hibernate.entities.Utente" table = "utente">
      
      <meta attribute = "class-description">
         This class contains the utente detail. 
      </meta>
      
      <id name = "id" type = "int" column = "id">
         <generator class="native"/>
      </id>
      
      <property name = "cognome" column = "cognome" type = "string"/>
      <property name = "nome" column = "nome" type = "string"/>
      <property name = "email" column = "email" type = "string"/>
      <property name = "dataIscrizione" column = "data_iscrizione" type = "date"/>
      
   </class>
</hibernate-mapping>